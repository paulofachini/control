{
  "name": "control",
  "version": "1.0.0",
  "description": "Sistema para o controle financeiro pessoal.",
  "main": "index.js",
  "jest": {
      "testMatch": [
          "**/tests/**/*.test.js"
      ],
      "collectCoverage": true,
      "coverageDirectory": "coverage",
      "coverageReporters": [
          "lcov",
          "text"
      ],
      "reporters": [
          "default",
          [
              "jest-junit",
              {
                  "outputDirectory": "coverage",
                  "outputName": "test-report.xml"
              }
          ]
      ],
      "collectCoverageFrom": [
          "src/**/*.js",
          "!**/node_modules/**"
      ]
  },
  "scripts": {
    "start": "node server.js",
    "test": "jest",
    "test:unit": "jest tests/unit/",
    "test:integration": "jest tests/integration/",
    "test:coverage": "jest tests/unit tests/integration --coverage",
    "test:ci": "jest --coverage --testPathIgnorePatterns=tests/e2e --testResultsProcessor=jest-junit",
    "test:e2e": "jest tests/e2e/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paulofachini/control.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/paulofachini/control/issues"
  },
  "homepage": "https://github.com/paulofachini/control#readme",
  "dependencies": {
    "express": "^5.1.0"
  },
  "devDependencies": {
    "jest": "^30.1.3",
    "jest-junit": "^16.0.0",
    "jest-sonar": "^0.2.16",
    "supertest": "^7.1.4"
  }
}
